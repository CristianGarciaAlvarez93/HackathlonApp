<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_margin="@dimen/margin_8"
	android:backgroundTint="@color/colorPrimary"
	android:orientation="vertical">

	<TableLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TableRow>

			<TextView
				android:layout_gravity="center"
				android:layout_weight="1"
				android:text="Site/Country:"
				android:textColor="@android:color/white"
				android:textStyle="bold" />

			<EditText
				android:layout_weight="2"
				android:backgroundTint="@android:color/white"
				android:hint="Country" />
		</TableRow>

		<TableRow>

			<TextView
				android:layout_weight="1"
				android:text="Serial Nº:"
				android:textColor="@android:color/white"
				android:textStyle="bold" />

			<EditText
				android:layout_weight="2"
				android:backgroundTint="@android:color/white"
				android:hint="Serial nº" />
		</TableRow>

		<TableRow>

			<TextView
				android:layout_weight="1"
				android:text="Gr. Condition:"
				android:textColor="@android:color/white"
				android:textStyle="bold" />

			<EditText
				android:layout_weight="2"
				android:backgroundTint="@android:color/white"
				android:hint="Gr.Condition" />

		</TableRow>

		<TableRow>

			<TextView
				android:layout_weight="1"
				android:text="Operation hrs:"
				android:textColor="@android:color/white"
				android:textStyle="bold" />

			<EditText
				android:layout_weight="2"
				android:backgroundTint="@android:color/white"
				android:hint="Operation hrs" />
		</TableRow>

		<TableRow>

			<TextView
				android:layout_weight="1"
				android:text="Shoe width:"
				android:textColor="@android:color/white"
				android:textStyle="bold" />

			<EditText
				android:layout_weight="2"
				android:backgroundTint="@android:color/white"
				android:hint="Shoe width" />
		</TableRow>

		<TableRow>

			<TextView
				android:layout_gravity="center_vertical"
				android:layout_weight="1"
				android:text="Impact:"
				android:textColor="@android:color/white"
				android:textStyle="bold" />

			<RadioGroup
				android:layout_weight="2"
				android:orientation="horizontal">

				<RadioButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Low"
					android:textColor="@android:color/white" />

				<RadioButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Mod"
					android:textColor="@android:color/white" />

				<RadioButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="High"
					android:textColor="@android:color/white" />
			</RadioGroup>
		</TableRow>

		<TableRow>

			<TextView
				android:layout_gravity="center_vertical"
				android:layout_weight="1"
				android:text="Abrasive:"
				android:textColor="@android:color/white"
				android:textStyle="bold" />

			<RadioGroup
				android:layout_weight="2"
				android:orientation="horizontal">

				<RadioButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Low"
					android:textColor="@android:color/white" />

				<RadioButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Mod"
					android:textColor="@android:color/white" />

				<RadioButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:shadowColor="@android:color/white"
					android:text="High"
					android:textColor="@android:color/white" />
			</RadioGroup>
		</TableRow>

		<TableRow>

			<TextView
				android:layout_gravity="center_vertical"
				android:layout_weight="1"
				android:text="Moisture:"
				android:textColor="@android:color/white"
				android:textStyle="bold" />

			<RadioGroup
				android:layout_weight="2"
				android:orientation="horizontal">

				<RadioButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Low"
					android:textColor="@android:color/white" />

				<RadioButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Mod"
					android:textColor="@android:color/white" />

				<RadioButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="High"
					android:textColor="@android:color/white" />
			</RadioGroup>
		</TableRow>

		<TableRow>

			<TextView
				android:layout_gravity="center_vertical"
				android:layout_weight="1"
				android:text="Packing:"
				android:textColor="@android:color/white"
				android:textStyle="bold" />

			<RadioGroup
				android:layout_weight="2"
				android:orientation="horizontal">

				<RadioButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Low"
					android:textColor="@android:color/white" />

				<RadioButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Mod"
					android:textColor="@android:color/white" />

				<RadioButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="High"
					android:textColor="@android:color/white" />
			</RadioGroup>
		</TableRow>

		<TableRow>

			<TextView
				android:layout_weight="1"
				android:text="Shoe type:"
				android:textColor="@android:color/white"
				android:textStyle="bold" />

			<RadioGroup
				android:layout_weight="2"
				android:orientation="horizontal">

				<RadioButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Triple (HD)"
					android:textColor="@android:color/white" />

				<RadioButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Double"
					android:textColor="@android:color/white" />

				<RadioButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Single"
					android:textColor="@android:color/white" />
			</RadioGroup>
		</TableRow>

		<TableRow>

			<TextView
				android:layout_weight="1"
				android:text="Track tension:"
				android:textColor="@android:color/white"
				android:textStyle="bold" />

			<RadioGroup
				android:layout_weight="2"
				android:orientation="horizontal">

				<RadioButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Triple (HD)"
					android:textColor="@android:color/white" />

				<RadioButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Double"
					android:textColor="@android:color/white" />

				<RadioButton
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="Single"
					android:textColor="@android:color/white" />
			</RadioGroup>
		</TableRow>
		<TableRow>
			<ImageView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:src="@drawable/volvo_logo_scaled"/>
		</TableRow>
	</TableLayout>
</android.support.v7.widget.CardView>