<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/idler_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_toRightOf="@+id/still_img"
            android:padding="@dimen/margin_8"
            android:text="Idler Insepection : "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size16" />

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/idler_height_top_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="2dp"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginRight="@dimen/margin_8"
            android:visibility="visible"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            card_view:cardCornerRadius="2dp"
            card_view:contentPadding="8dp">

            <LinearLayout
                android:id="@+id/idler_height_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/height_10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/idler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_8"
                    android:textStyle="bold"
                    android:text="Idler Height: "
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size16" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Std. max value:"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAlignment="textStart"
                            android:text="83mm"
                            android:textColor="@android:color/black" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Std. repair limit value:"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAlignment="textStart"
                            android:text="75mm"
                            android:textColor="@android:color/black" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Measurement LH:"
                            android:textColor="@android:color/black" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="LH" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Measurement RH:"
                            android:textColor="@android:color/black" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="RH" />
                    </LinearLayout>


                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/left_height_imageLayout"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/height_10"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/left_height_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="10dp"
                        android:text="Add Left Side Image"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_below="@+id/left_height_text">
                        <ImageView
                            android:id="@+id/left_height_image"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:alpha="0.87"
                            android:background="@drawable/tsa" />
                        <Button
                            android:id="@+id/left_height_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Image"
                            android:layout_toRightOf="@+id/left_height_image"
                            android:background="@color/white"
                            android:alpha="0.87"
                            android:textAllCaps="false"
                            android:padding="5dp"
                            android:layout_marginLeft="30dp"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/right_height_imageLayout"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/height_10"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/right_height_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="10dp"
                    android:text="Add Left Side Image"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/right_height_text">
                    <ImageView
                        android:id="@+id/right_height_image"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:alpha="0.87"
                        android:background="@drawable/tsa" />
                    <Button
                        android:id="@+id/right_height_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Image"
                        android:layout_toRightOf="@+id/right_height_image"
                        android:background="@color/white"
                        android:alpha="0.87"
                        android:textAllCaps="false"
                        android:padding="5dp"
                        android:layout_marginLeft="30dp"/>
                </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>